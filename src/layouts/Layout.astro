---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="I'm Federico Full Stack Developer & UX/UI enthusiast" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--primary-color: #9EB2B2;
		--primary-accent-color: #D9FFFF;

		--background-color: #000;
		--secondary-background-color: #101010;

		--border-color: #2E2E2E;

		--border-radius: 1.25rem;

		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	@font-face {
	font-family: 'Satoshi-Variable';
	src: url('/fonts/Satoshi-Variable.woff2') format('woff2'),
		url('/fonts/Satoshi-Variable.woff') format('woff'),
		url('/fonts/Satoshi-Variable.ttf') format('truetype');
		font-weight: 300 500 900;
		font-display: swap;
		font-style: normal;
	}

	html {
		font-family: 'Satoshi-Variable', system-ui, sans-serif;
		/* background: #13151a; */
		background: #000;
		background-size: 224px;
		color: var(--primary-color);
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	/* Reset css */
	html, body, div, span, object, iframe,
	h1, h2, h3, h4, h5, h6, p, blockquote, pre,
	abbr, address, cite, code,
	del, dfn, em, img, ins, kbd, q, samp,
	small, strong, sub, sup, var,
	b, i,
	dl, dt, dd, ol, ul, li,
	fieldset, form, label, legend,
	table, caption, tbody, tfoot, thead, tr, th, td,
	article, aside, canvas, details, figcaption, figure,
	footer, header, hgroup, menu, nav, section, summary,
	time, mark, audio, video {
		margin:0;
		padding:0;
		border:0;
		outline:0;
		font-size:100%;
		vertical-align:baseline;
	}

	body {
		line-height:1;
	}

	article,aside,details,figcaption,figure,
	footer,header,hgroup,menu,nav,section {
		display:block;
	}

	nav ul {
		list-style:none;
	}

	blockquote, q {
		quotes:none;
	}

	blockquote:before, blockquote:after,
	q:before, q:after {
		content:'';
		content:none;
	}

	a {
		margin:0;
		padding:0;
		font-size:100%;
		vertical-align:baseline;
		background:transparent;
	}

	body {
		justify-content: center;
		align-items: center;
		display: flex;
		color: var(--primary-color);
	}

	h1 {
		/* font-size: 8rem; */
		font-size: calc(14px + 8vmin);
		font-weight: 900;
		line-height: 1;
		color: var(--primary-color);
		/* background: linear-gradient(97.13deg, var(--primary-color) 0%, #515151 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent; */
	}
	h3 {
		/* font-size: 6rem; */
		font-size: calc(14px + 2vmin);
		font-weight: 300;
		line-height: 1.4;
		color: var(--primary-color);
		opacity: 0.7;
		background: linear-gradient(97.13deg, var(--primary-color) 0%, #515151 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	h2 {
		/* font-size: 3rem;*/
		font-size: calc(14px + 4vmin);
		font-weight: 300;
		line-height: 1;
		color: var(--primary-color);
		background: linear-gradient(97.13deg, var(--primary-color) 0%, #515151 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	p {
		font-size: 2rem;
	}
	a {
		color: inherit;
		text-decoration: none;
	} 
	a:hover {
		color: inherit;
		text-decoration: none;
	}
	.text-accent {
		color: var(--primary-accent-color);
	}

	.mobile-hidden {
		display: none;
	}
	@media all and (min-width: 480px) {
		.mobile-hidden {
			display: inline-block;
		}
	}
	@media all and (min-width: 992px) and (max-width: 1470px) {
		.tablet-hidden {
			display: none;
		}
	}



	.rounded-tile__title {
		font-size: calc(16px + 2vmin);
		font-weight: 500;
	}

	.rounded-tile__description {
		font-size: calc(16px + 1vmin);
		font-weight: 400;
	}

	

	

</style>
