---
import { Image } from 'astro:assets';
import photo from '../assets/images/me.webp';
---

<div class="hero-img" >
    <Image class="profile-photo" src={photo} alt="@me"/>
</div>

<style>
    .hero-img {
        border-radius: 50%;
        height: 10rem;
        width: 10rem;
        overflow: hidden;
        border-radius: 20px;
    }

    .profile-photo {
        height: 100%;
        width: 100%;
        object-fit: cover;
        filter: grayscale(100%);
    }
</style>